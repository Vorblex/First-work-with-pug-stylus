.portfolio__list
	@extends .clearfix
	margin 0 -10px
	font-size 0

	+phone()
		margin 0

.portfolio__item
	width 33.3%
	padding 0 10px
	margin-bottom 20px
	inlineblock()

	*
		font-size 14px

	+phone()
		float none
		width 100%

.portfolio__block-link
	display block
	background $clear-white
	border-radius 10px
	box-shadow: 0px 1px 3px 0px rgba(0, 0, 0, 0.2);

	&:hover
		.portfolio__item-title
			color $red

.portfolio__item-img
	width 100%
	height 100%
	display block
	overflow hidden
	border-radius 10px 10px 0 0

.portfolio__item-text
	padding 20px

.portfolio__item-title
	fira()
	font-size 21px
	color $blue
	transition .3s

.portfolio__item-desc
	fira(light)
	font-size 14px
	color $black

.portfolio__item-type
	fira(bold)
	font-size 13px
	color #aeaeae
	padding-top 10px

	.fa
		font-size 16px