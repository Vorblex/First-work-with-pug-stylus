.hello-wrapper
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	text-align center
	min-width 320px

	&:before
		content ""
		height 100%
		inlineblock(middle)

.hello_main
	width 300px
	margin-top 72px
	border-radius 10px
	background $clear-white
	inlineblock(middle)

.hello__top
	position relative
	padding-top 86px
	padding-bottom 15px



.hello__pic
	position absolute
	left 50%
	bottom 100%
	margin-left -71px
	margin-bottom -71px
	width 142px
	height 142px
	display inline-block
	border-radius 50%
	overflow hidden

.hello__img
	width 100%
	height 100%
	display block

.hello__name
	text-align center

.hello__text
	width 150px
	fira(medium)
	font-size 21px
	color $black
	display inline-block

.hello__bottom
	background $blue
	border-radius 0 0 10px 10px
	padding 20px 0

.button__hello
	border 2px solid $clear-white
	transition .3s
	.button__link
		color $clear-white

	&:hover
		background $clear-white
		.button__link
			color $blue





